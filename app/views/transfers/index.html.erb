<div class="list-center">
<h1>Listing transfers history</h1>
<table>
  <thead>
    <tr>
      <th> From account </th>
      <th> To account </th>
      <th> Amount </th>
      <th> Time </th>
      <th colspan="3"></th>
    </tr>

  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <!-- need to change to label  -->
        <td><%= transfer.from_account_id %></td>
        <td><%= transfer.to_account_id %></td>
        <td><%= transfer.amount %></td>
        <td><%= Time.now.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Make A Transfer', new_transfer_path %>
</div>



