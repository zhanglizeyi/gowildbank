<style>
  .form-group{
    font-size: 200%;
    color: rgb(200,0,0);
  }
</style>

<div class="row">
  <div class="col-md-4"></div>
  
  <div class="col-md-4">
    <form class="form-horizontal" role="form" action="/login/login" method="post">
      <%= form_for(:user, :url => {:controller => 'login', :action => 'login'}) do |f| %>
      
      <div class="form-group">
	<label for="user[username]">User Name</label>
	<%= f.text_field :username, class: "form-control"%>
      </div>
      
      <div class="form-group">
	<label for="user[password]">Password</label>
	<%= f.text_field :password, class: "form-control"%>
      </div>
      <input type="submit" name="commit" class="btn btn-default" value="Login" />
      <% end %>
    </form>
  </div>
  
  <div class="col-md-4"></div>
</div>

